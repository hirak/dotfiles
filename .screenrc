# .screenrc 
# @Author: Hiraku NAKANO
#

# ESC = Ctrl + j
escape ^j^j

defencoding utf-8
encoding utf-8 utf-8
autodetach on
bell_msg "^G"
vbell off
defscrollback 100000
startup_message off
hardstatus string "[ SCREEN %n: %t ] %h"

termcapinfo xterm* 'Co#256:pa#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm:'
attrcolor b ".I"
defbce "on"
term xterm-256color

#
# original: http://www.tees.ne.jp/~sin-x/200406a.html#0403
# scrolling caption
caption always "%+0<%?%F%:%{= wr} %n %t%{ww}%?%?%F%{= wg}%:%{= ww}%? %-w%?%F%{=u dr}%?%50>%n %t%{-}%+w%65< %=%?%F%{.b}%?%y/%m/%d %?%F%{.m}%?%c%?%F%{wd}%?%? [%0`]%?"

#display running_command
shelltitle "$ |shell"

bind n screen
bind h prev
bind j next
bind l windowlist
